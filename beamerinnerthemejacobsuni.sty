% Title page
\defbeamertemplate*{title page}{jacobsuni}[1][]
{
  \vskip5.5cm%
  \begin{beamercolorbox}[wd=6.45cm,#1]{title page header}
    \usebeamerfont{title}\MakeUppercase\inserttitle\par%
  \end{beamercolorbox}%
  \vskip0.3cm%
  \begin{beamercolorbox}[wd=6.45cm,#1]{author}
    \usebeamerfont{author}\insertauthor%
  \end{beamercolorbox}
  \begin{beamercolorbox}[wd=6.45cm,#1]{date}
    \usebeamerfont{institute}\insertinstitute, \usebeamerfont{author}\insertdate%
  \end{beamercolorbox}
  \vfill
}

